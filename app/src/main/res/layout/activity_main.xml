<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kartikeypc.istick.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/text2"/>

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/find_stick"
    android:text="FIND THE STICK"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/text2"
    android:layout_marginTop="15px"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_add_number"
        android:text="ADD Numbers to list."
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text2"
        android:layout_marginTop="145px"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_send_message"
        android:text="Send"
        android:layout_below="@+id/btn_add_number"
        android:layout_marginTop="145px"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/log_textView"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
